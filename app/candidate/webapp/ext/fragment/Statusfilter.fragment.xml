<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
        <ComboBox
            id="statusfilter"
            core:require="{handler: 'candidate/ext/fragment/Statusfilter'}"
            selectedKey="{path: 'filterValues>', type: 'sap.fe.macros.filter.type.Value', formatOptions: { operator: 'candidate.ext.fragment.Statusfilter.filterItems' }}"
        >
            <items>
            <core:Item key="A" text="Active" />
            <core:Item key="I" text="Inactive" />
            <core:Item key="H" text="Hired" />
            <core:Item key="R" text="Rejected" />
            </items>
        </ComboBox>
</core:FragmentDefinition>